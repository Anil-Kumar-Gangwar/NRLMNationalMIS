@model IwwageNationalMIS.Model.ValidateLogin
@{
    ViewBag.Title = "Sign in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="row">
    <aside class="col-sm-4">
        <div class="card">
            <article class="card-body">
                @*<a href="" class="float-right btn btn-outline-primary">Sign up</a>*@
                <h4 class="card-title mb-4 mt-1">Sign in</h4>
            @using (Html.BeginForm())
            {
                <form>
                    <div class="form-group">                    
                        @Html.LabelFor(m => m.userName)
                        @Html.TextBoxFor(m => m.userName, null, new { @class = "form-control", placeholder = "Login ID", maxlength = 20, autofocus = "autofocus", autocomplete = "off", onpaste = "return false", ondrop = "return false", ondrag = "return false", oncopy = "return false", oncut = "return false" })
                        @Html.ValidationMessageFor(m => m.userName, "", new { @class = "text-danger" })                                      
                    </div> <!-- form-group// -->
                    <div class="form-group">
                        @Html.LabelFor(m => m.password)
                        @Html.PasswordFor(m => m.password, new { @class = "form-control", placeholder = "Password", maxlength = 50, autocomplete = "off", onpaste = "return false", ondrop = "return false", ondrag = "return false", oncopy = "return false", oncut = "return false" })
                        @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                    </div> <!-- form-group// -->
                    <div class="form-group">
                        <p class="text-danger">@MvcHtmlString.Create(@ViewBag.LoginMessage)</p>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> Login  </button>
                    </div> <!-- form-group// -->
                </form>
              }
            </article>
        </div> <!-- card.// -->
    </aside> 
</div>

